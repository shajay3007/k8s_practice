# kubectl create -f namespace.yml => create a name space with maifast file

# kubectl get ns => list the name spaces

# kubectl delete ns nginx => delete the name spaces



#kubectl apply -f pod.yml => command to create pod

# kubectl get pods  => command to list pod in default ns

# kubectl get ns => List the namespaces created

# kubectl get pods -n nginx => list the pods in namespace

# kubectl exec -it nginx-pod -n nginx -- bash => enter into the container

# kubectl describe pod nginx-pod -n nginx => get complete details of the pod.
